<h2><%= @task.title %></h2>
<p>
  <%= @task.details %>
</p>

<% if @task.completed %>
  <i class="far fa-check-square"></i> <span>This task has been completed</span>
<% else %>
  <i class="far fa-square"></i> <span>This task has not been completed yet</span>
<% end %>

<br>
<%= link_to "Edit the task", edit_task_path(@task) %>
<br>
<%= link_to "Delete the task", task_path(@task),
            method: :delete,
            data: { confirm: 'Are you sure?'} %>
<br>
<%= link_to "Back to list", tasks_path %>